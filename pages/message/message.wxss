/* pages/message/message.wxss */
page{
  background: #ddd;
}
.container{
  width:100%;
  background: #ddd;
}
.box{
  width:100%;
  position: fixed;
  top:0;
}
.box>.nav{
  width:100%;
  height:80rpx;
  background: #fff;
  display:flex;
  flex-direction:row;
  justify-content:center;
  position: fiexd;
  top:0;
}
.box>.nav>.tab{
  box-sizing:border-box;
  width:50%;
  height:100%;
  font-size:16px;
  text-align:center;
  line-height:76rpx;
}
.h80rpx{
  height:80rpx;
}
.active{
  border-bottom:2px solid #f38b71;
}
.message-list{
  width:100%;
}
.message-list>.message{
  width:730rpx;
  display:flex;
  flex-direction:column;
  border-radius: 5px;
  margin:20rpx auto;
  background: #fff;
  box-shadow: 0 0 10rpx #ccc;
}
.message-list>.message>.header{
  display:flex;
  flex-direction:row;
  justify-content: space-between;
  padding:20rpx 20rpx 0;
}
.message>.header>image{
  width:80rpx;
  height:80rpx;
  border-radius:50%;
}
.message>.header>.desc{
  width:85%;
  display:flex;
  flex-direction:row;
  justify-content: space-between;
}
.message>.header>.desc>.info{
  display:flex;
  flex-direction:column;
}
.message>.header>.desc>.info>.name{
  font-size:30rpx;
  font-weight:599;
}
.message>.header>.desc>.info>.localtion{
  margin-top:8rpx;
  font-size:24rpx;
  color:#666;
}
.message>.header>.desc>.time{
  font-size:24rpx;
  color:#666;
}
.message-list>.message>.body{
  padding:20rpx;
}
.message-list>.message>.body>.content{
  font-size:28rpx;
  letter-spacing: 2rpx;
  margin-bottom:20rpx;
}
.message-list>.message>.body>image{
  width:100%;
  display: block;
}
.message>.body>.function{
  font-size:28rpx;
  margin-top:20rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
}
.message>.body>.function>view{
  width:50%;
  padding:20rpx;
  border:1rpx solid #ddd;
  font-size:20rpx;
  text-align:center;
  box-shadow: 0 0 10rpx #ddd inset;
  background: #eee;
}
.message>.body>.function>view:active{
  box-shadow: 0 0 15rpx #bbb inset;
  background: #ddd;
}
.iconfont{
  color:#666;
  font-size: 28rpx;
  margin-right:10rpx;
}
.message>.body>.function>.favour{
  border-top-left-radius:8px;
  border-bottom-left-radius:8px;
}
.message>.body>.function .is-click{
  color:red;
}
.message>.body>.function>.dis-favour{
  border-top-right-radius:8px;
  border-bottom-right-radius:8px;
}
.send-message{
  box-sizing: border-box;
  width:100%;
  background: #fff;
  margin-top:6rpx;
  padding:20rpx;
}
.uploadImgBox{
  width:710rpx;
}
.uploadImgBox>image{
  width:100%;
  margin:20rpx 0;
}
.send-message textarea.inputBar{
  box-sizing: border-box;
  width:710rpx;
  border:1rpx solid #ddd;
  border-radius:8rpx;
  font-size:28rpx;
  color:#666;
  padding:10rpx;
}
.send-message .fun-bar{
  width:100%;
  margin-top:20rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between
}
.send-message .fun-bar>.iconfont{
  font-size:45rpx;
  color:#888;
  font-weight: 599;
  line-height:58rpx;
}
.send-message .fun-bar>button{
  margin:0;
}
.lastinfo{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  color: #999;
  text-align: center;
  font-size:30rpx;
}